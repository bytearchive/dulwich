import sys
import logging
import argparse

from dulwich import log_utils
from dulwich.swift import (
    SwiftRepo,
    SwiftConnector,
    load_conf,
    )

if __name__ == "__main__":
    parser = argparse.ArgumentParser(
        description='Create an empty bare repository on Swift')
    parser.add_argument(
        '-c', '--config', action="store",
        default="",
        help="Path to the configuration file")
    parser.add_argument(
        '-r', '--repo', action="store",
        help="The repository's name")
    parser.add_argument(
        '-d', '--debug', action="store_true",
        default=False,
        help="Will print debug logs")
    ns = parser.parse_args()

    if len(sys.argv) < 2:
        sys.exit(1)

    log_utils.default_logging_config()
    if ns.debug:
        log_utils.getLogger().setLevel(logging.DEBUG)
    else:
        log_utils.getLogger().setLevel(logging.INFO)

    if not ns.config:
        print "Please provide the configuration file"
        sys.exit(1)
    else:
        conf = load_conf(ns.config)
    if not ns.repo:
        print "Please provide the repository name to init"
        sys.exit(1)

    scon = SwiftConnector(ns.repo, conf)
    SwiftRepo.init_bare(scon, conf)
